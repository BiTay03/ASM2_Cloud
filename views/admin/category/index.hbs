<div class='page-wrapper' id='main-wrapper' data-layout='vertical'
    data-navbarbg='skin6' data-sidebartype='full'
    data-sidebar-position='fixed' data-header-position='fixed'>
    <div class='body-wrapper'>

        <div class='container-fluid mt-4'>
            <div class='card'>
                <div class='card-body'>
                    <h5 class='card-title mb-4'>Category Management</h5>

                    <a class='btn btn-primary mb-3' href='/category/add'>Add new
                        category</a>
                    <a class='btn btn-danger mb-3'
                        href="/category/deleteall">Delete
                        All</a>

                    <table class='table table-hover'>
                        <thead>
                            <tr>
                                <th scope='col'>Category Name</th>
                                <th scope='col'>Country</th>
                                <th scope='col'>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each categories}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{country}}</td>
                                <td>
                                    <a
                                        class='btn btn-outline-warning'
                                        href='/category/edit/{{_id}}'>Edit</a>
                                    <a class="btn btn-outline-danger"
                                        href="/category/delete/{{_id}}">Delete</a>

                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
