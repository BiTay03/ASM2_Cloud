<div class='page-wrapper' id='main-wrapper' data-layout='vertical'
    data-navbarbg='skin6' data-sidebartype='full'
    data-sidebar-position='fixed' data-header-position='fixed'>
    <div class='body-wrapper'>

        <div class='container-fluid mt-4'>
            <div class='card'>
                <div class='card-body'>
                    <h5 class='card-title mb-4'>Product Management</h5>

                    <a class='btn btn-primary mb-3' href='/product/add'>Add new
                        product</a>
                    <a href="/product/deleteall"
                        class='btn btn-danger mb-3'>Delete
                        All</a>

                    <table class='table table-hover'>
                        <thead>
                            <tr>
                                <th scope='col'>Product Name</th>
                                <th scope='col'>Color</th>
                                <th scope='col'>Image</th>
                                <th scope='col'>Price</th>
                                <th scope='col'>Category</th>
                                {{!-- <th scope='col'>Country</th> --}}
                                <th scope='col'>Quantity</th>
                                <th scope='col'>Date</th>
                                <th scope='col'>Action</th>

                            </tr>
                        </thead>
                        {{!-- Lặp dữ liệu từ collection products ra --}}
                        <tbody>
                            {{#each products}}
                            <tr>
                                <td>{{name}}</td>
                                <td>{{color}}</td>
                                <td>
                                    <img src="{{ image }}" alt width="100"
                                        height="120">
                                </td>
                                <td>{{price}}</td>
                                {{!-- <td>{{}}</td> --}}
                                <td>{{category.name}}</td>
                                {{!-- Tên trường tham chiếu.trường của
                                collection tham chiếu --}}
                                {{!-- category là tên khai báo trường trong
                                product, có kiểu ObjectId, name là tên trường
                                của collection mang ObjectId --}}
                                <td>{{quantity}}</td>
                                <td>{{date}}</td>
                                <td>
                                    <a
                                        class='btn btn-outline-warning'
                                        href='/product/edit/{{_id}}'>Edit</a>
                                    <a class="btn btn-outline-danger"
                                        href="/product/delete/{{_id}}">Delete</a>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
